#include <bits/stdc++.h>
using namespace std;
int main()
{

    int v;
    int e;
    cout << "Enter the number of vertices:" << endl;
    cin >> v;
    cout << "Enter the number of edges:" << endl;
    cin >> e;
    int graph[v][e];

    for (int i = 0; i < v; i++)
    {
        for (int j = 0; j < e; j++)
        {
            cout << "Enter the edges for : [" << i << "]" << "[" << j << "]" << endl;
            cin >> graph[i][j];
        }
    }

    cout << "The 2-d matrix representing the graph is:" << endl;
    for (int i = 0; i < v; i++)
    {
        for (int j = 0; j < e; j++)
        {
            cout << graph[i][j] << " ";
        }
        cout << endl;
    }
    return 0;
}
