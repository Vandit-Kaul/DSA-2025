#include <bits/stdc++.h>
using namespace std;
int power(int n, int x)
{
    if (x == 0)
    {
        return 1;
    }

    return n * power(n, x - 1);
}
int main()
{
    int n, x;
    cout << "enter the power you want to calculate:" << endl;
    cin >> n;
    cout << "enter the exponent:" << endl;
    cin >> x;
    cout << "the answer is:" << power(n, x) << endl;
    return 0;
}
